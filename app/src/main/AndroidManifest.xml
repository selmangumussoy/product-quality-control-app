        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Hechaton"
        tools:targetApi="31">

        <!-- YeniRaporActivity NoActionBar temasÄ±yla -->
        <activity
            android:name=".YeniRaporActivity"
